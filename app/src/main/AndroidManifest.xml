<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="universodoandroid.br.com.moviesupcoming">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="universodoandroid.br.com.moviesupcoming.modules.moviesupcoming.MoviesUpcomingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="universodoandroid.br.com.moviesupcoming.modules.moviesupcomingdetails.MoviesUpcomingDetailsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>